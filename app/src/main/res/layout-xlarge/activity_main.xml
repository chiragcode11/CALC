<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:layout_weight="3"
        android:paddingEnd="@dimen/_10sdp"
        android:maxLines="2"
        android:background="@color/black"
        android:gravity="end|bottom"
        android:text="@string/default_value"
        android:textColor="@color/white"
        android:textSize="@dimen/_45sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnd1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_grey"
            android:onClick="allclear"
            android:text="@string/ac"
            android:textColor="@color/black"
            android:textSize="45sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnd2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_grey"
            android:onClick="allclear"
            android:text="@string/ac"
            android:textColor="@color/black"
            android:textSize="45sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnd6"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_grey"
            android:onClick="allclear"
            android:text="@string/ac"
            android:textColor="@color/black"
            android:textSize="45sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnd3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_grey"
            android:onClick="allclear"
            android:text="@string/ac"
            android:textColor="@color/black"
            android:textSize="45sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnd4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_grey"
            android:onClick="allclear"
            android:text="@string/ac"
            android:textColor="@color/black"
            android:textSize="45sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnd5"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_grey"
            android:onClick="allclear"
            android:text="@string/ac"
            android:textColor="@color/black"
            android:textSize="45sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnac"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_grey"
            android:onClick="allclear"
            android:text="@string/ac"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnpm"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_grey"
            android:gravity="center"
            android:onClick="backclear"
            android:text="âŒ«"
            android:textColor="@color/black"
            android:textSize="45sp"
            tools:ignore="NestedWeights" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnper"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_grey"
            android:onClick="ondigit"
            android:text="@string/percentage"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btndvd"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_orange"
            android:drawableTint="@color/btn_orange"
            android:onClick="operator"
            android:text="@string/divide"
            android:textColor="@color/black"
            android:textSize="45sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:layout_weight="1"
        android:orientation="horizontal"

        >


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_dgrey"
            android:text="@string/_7"
            android:textColor="@color/black"
            android:textSize="45sp"
            tools:ignore="NestedWeights"
            android:onClick="ondigit"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_dgrey"
            android:text="@string/_8"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:onClick="ondigit"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_dgrey"
            android:text="@string/_9"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:onClick="ondigit"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnmlp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textSize="45sp"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_orange"
            android:onClick="operator"
            android:text="@string/multiply"
            android:textAlignment="center"
            android:textColor="@color/black" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:layout_weight="1"
        android:orientation="horizontal"

        >


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnfr"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_dgrey"
            android:text="@string/_4"
            android:textColor="@color/black"
            android:textSize="45sp"
            app:iconTint="#FFFFFF"
            android:onClick="ondigit"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_dgrey"
            android:text="@string/_5"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:onClick="ondigit"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_dgrey"
            android:text="@string/_6"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:onClick="ondigit"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnmin"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_orange"
            android:text="@string/minus"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:onClick="operator"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:layout_weight="1"
        android:orientation="horizontal"

        >


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnone"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_dgrey"
            android:text="@string/_1"
            android:textColor="@color/black"
            android:textSize="45sp"
            app:iconTint="#FFFFFF"
            android:onClick="ondigit"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btntwo"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_dgrey"
            android:text="@string/_2"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:onClick="ondigit"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnthree"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_dgrey"
            android:text="@string/_3"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:onClick="ondigit"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnplus"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_orange"
            android:text="@string/plus"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:onClick="operator"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="RtlSymmetry">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="2.1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_dgrey"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="45sp"
            app:iconTint="#FFFFFF"
            tools:ignore="NestedWeights"
            android:onClick="ondigit"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btndot"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_dgrey"
            android:text="@string/dot"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:onClick="decimalpoint"
            tools:ignore="OnClick" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btneql"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/circle_btn"
            android:backgroundTint="@color/btn_orange"
            android:text="@string/equal"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:onClick="onEqual"/>


    </LinearLayout>

</LinearLayout>
